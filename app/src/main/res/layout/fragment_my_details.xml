<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/grey_300"
             tools:context="com.yso.charp.fragment.MyDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_details_image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginBottom="15dp"
            android:src="@android:drawable/ic_menu_gallery"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/my_details_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/my_details_name"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/ic_menu_edit"/>

            <TextView
                android:id="@+id/my_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/title_bottom_margin"
                android:text="Name"
                android:theme="@style/ThemeOverlay.MyTitleText"/>

            <ImageButton
                android:visibility="gone"
                android:id="@+id/my_details_done"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/my_details_edit_text"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_cab_done_holo_light"/>

            <EditText
                android:visibility="gone"
                android:id="@+id/my_details_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/title_bottom_margin"
                android:text="blb"
                android:theme="@style/ThemeOverlay.MyTitleText"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/my_details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/title_bottom_margin"
            android:text="@string/phone_title_text"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/my_details_status"
            style="@style/ThemeOverlay.MyTextDetail"
            android:text="@string/signed_out"/>

        <TextView
            android:id="@+id/my_details_fb_detail"
            style="@style/ThemeOverlay.MyTextDetail"
            tools:text="Firebase User ID: 123456789abc"/>

    </LinearLayout>

</FrameLayout>
